<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_1seconds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorMainBlue1"
        android:text="@string/button_1seconds_label"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/button_3seconds" />

    <Button
        android:id="@+id/button_3seconds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorMainBlue2"
        android:text="@string/button_3seconds_label"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/button_5seconds" />

    <Button
        android:id="@+id/button_5seconds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorMainBlue3"
        android:layout_marginBottom="30dp"
        android:text="@string/button_5seconds_label"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
